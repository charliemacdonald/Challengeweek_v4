<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ipmedt4.challengeweek_v2.Opmerkingenscherm"
    >


    <ImageView
        android:id="@+id/hsleidenlogo"
        android:src="@drawable/logohsleiden"
        android:layout_width="50dp"
        android:layout_height="55dp"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/opslaan"
        android:background="@drawable/roundedbutton"
        android:id="@+id/opmerkingenopslaanbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/opmerkingen"
        android:textSize="36sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/textView20"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opmerkingentekst"
        android:background="@drawable/rounded_border"

        android:layout_marginTop="55dp"
        android:layout_below="@+id/hsleidenlogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/opmerkingenopslaanbutton"
        android:layout_alignEnd="@+id/opmerkingenopslaanbutton"
        android:layout_above="@+id/opmerkingenopslaanbutton" />


</RelativeLayout>
