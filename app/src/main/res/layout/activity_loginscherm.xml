<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ipmedt4.challengeweek_v2.Loginscherm" >
    
    <ImageView
     android:id="@+id/hsleidenlogo"
     android:src="@drawable/logohsleiden"
     android:layout_width="50dp"
     android:layout_height="55dp"
     />

    <TextView
        android:id="@+id/Challengeweek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Challengeweek"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/hsleidenlogo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailveld"
        android:background="#ffffff"
        android:hint="E-mailadres"
        android:layout_below="@+id/Challengeweek"
        android:layout_alignLeft="@+id/Challengeweek"
        android:layout_alignStart="@+id/Challengeweek"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/Challengeweek"
        android:layout_alignEnd="@+id/Challengeweek" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/wachtwoordveld"
        android:background="#ffffff"
        android:hint="Wachtwoord"
        android:layout_below="@+id/emailveld"
        android:layout_alignLeft="@+id/emailveld"
        android:layout_alignStart="@+id/emailveld"
        android:layout_alignRight="@+id/emailveld"
        android:layout_alignEnd="@+id/emailveld" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Aanmelden"
        android:id="@+id/aanmeldknop"
        android:layout_below="@+id/wachtwoordveld"
        android:layout_alignLeft="@+id/wachtwoordveld"
        android:layout_alignStart="@+id/wachtwoordveld"
        android:layout_marginTop="57dp"
        android:layout_alignRight="@+id/wachtwoordveld"
        android:layout_alignEnd="@+id/wachtwoordveld" />


</RelativeLayout>