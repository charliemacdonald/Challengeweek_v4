<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ipmedt4.challengeweek_v2.Groepenscherm">

    <TextView android:text="@string/groepen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"

        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/groep1"
        android:textStyle="bold"
        android:id="@+id/Groep1"
        android:background="@drawable/buttongrijs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/groep2"
        android:textStyle="bold"
        android:background="@drawable/buttongrijs"
        android:id="@+id/Groep2"
        android:layout_below="@+id/Groep1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/Groep1"
        android:layout_alignEnd="@+id/Groep1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/groep3"
        android:textStyle="bold"
        android:id="@+id/Groep3"
        android:background="@drawable/buttongrijs"
        android:layout_below="@+id/Groep2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/Groep2"
        android:layout_alignEnd="@+id/Groep2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/groep4"
        android:textStyle="bold"
        android:background="@drawable/buttongrijs"
        android:id="@+id/Groep4"
        android:layout_below="@+id/Groep3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/Groep3"
        android:layout_alignEnd="@+id/Groep3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/groep5"
        android:id="@+id/Groep5"
        android:background="@drawable/buttongrijs"
        android:textStyle="bold"
        android:layout_below="@+id/Groep4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Groep4"
        android:layout_alignEnd="@+id/Groep4"
        android:layout_marginTop="30dp" />

</RelativeLayout>
